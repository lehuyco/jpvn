extends ../layout

block content
  .container
    .panel
      .page-header
        h4.page-title Quản lý người dùng
        ol.breadcrumb
          li.breadcrumb-item
            a(href='/admin') Dashboard
          li.breadcrumb-item.active(aria-current='page') Quản lý bài viết
        .page-actions
          a.btn.btn-primary(href="/admin/users/new") Thêm người dùng
      table.table.table-bordered
        thead
          tr
            //- th Avatar
            th Họ tên
            th Email
            th Vị trí
            th Tác vụ
        tbody
          each user in users
            tr
              //- td.col-img
              //-   if (user.image)
              //-     img.w-100(src=user.image)
              td.align-middle
                strong=user.name
              td.align-middle
                span=user.email
              td.fit.text-center
                span.badge(class=`bg-${USER_ROLE_COLORS[user.role]}`)=USER_ROLES[user.role]
              td.fit.align-middle
                a.btn.btn-primary.btn-sm(href="/admin/users/" + user._id)
                  i.fa.fa-pencil
                  span  Sửa
                button.btn.btn-danger.btn-sm.ms-2.delete-item-btn(data-id=user._id, data-scope='users', data-title=user.name)
                  i.fa.fa-close
                  span  Xóa