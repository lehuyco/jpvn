mixin form(path, method='POST')
  form.post-form(method=method, action=path, enctype='multipart/form-data')
    .form-group.row
      label.col-sm-2 Tiêu đề
      .col-sm-10
        input.form-control(type='text', name='title', value=(doc ? doc.title : ''))
    .form-group.row
      label.col-sm-2 Slogan
      .col-sm-10
        input.form-control(type='text', name='slogan', value=(doc ? doc.slogan : ''))
    .form-group.row
      label.col-sm-2 Ảnh chia sẻ
      .col-sm-10
        if (doc && doc.image)
          .row
            .col-md-2
              img.w-100(src=doc.image)
            .col-md-10
              input.form-control-file(type="file", name="image")
        else
          input.form-control-file(type="file", name="image")
    .form-group.row
      label.col-sm-2 Tên công ty
      .col-sm-10
        input.form-control(type='text', name='company', value=(doc ? doc.company : ''))
