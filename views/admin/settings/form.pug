      label.col-sm-2 Triết lý
      .col-sm-10
        input.form-control(type='text', name='philosophy', value=(doc ? doc.philosophy : ''))
    .form-group.row
      label.col-sm-2 Mô tả
      .col-sm-10
        textarea.form-control(rows='3', name='description')=(doc ? doc.description : '')
    .form-group.row
      label.col-sm-2 Từ khóa
      .col-sm-10
        input.form-control(type='text', name='keywords', value=(doc ? doc.keywords : ''))
