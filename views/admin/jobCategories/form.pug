mixin form(path, method='POST')
  form(method=method, action=path)
    .form-group.row
      label.col-sm-2(for='titleInput') Tiêu đề
      .col-sm-10
        input#titleInput.form-control(type='text', name='title', value=(category ? category.title : ''))
    .form-group.row
      label.col-sm-2(for='iconInput') Icon
      .col-sm-10
        input#iconInput.form-control(type='text', name='icon', value=(category ? category.icon : ''))
    .form-group.row
      label.col-sm-2(for='summaryTextarea') Mô tả
      .col-sm-10
        textarea#summaryTextarea.form-control(rows='3', name='summary')=(category ? category.summary : '')
    button.btn.btn-primary(type='submit') Xác nhận