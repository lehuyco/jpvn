extends ../layout
include ../shared/pagination
include ../../mixins/flash-messages

block content
  .container
    .panel
      .page-header
        h4.page-title Quản lý widget
        ol.breadcrumb
          li.breadcrumb-item
            a(href='/admin') Dashboard
          li.breadcrumb-item.active(aria-current='page') Quản lý widget
        .page-actions
          a.btn.btn-primary(href=ADMIN_PATH + "new") Thêm widget
      +flash-messages()
      table.table.table-bordered
        thead.thead-light
          tr
            th Hình ảnh
            th Tiêu đề
            th Ngôn ngữ
            th Tác vụ
        tbody
          each doc in docs
            if doc
              tr
                td.col-img.align-middle
                  if (doc.thumb)
                    img.w-100(src=doc.thumb)
                td.align-middle
                  strong=doc.title
                td.fit.align-middle.text-center
                  if doc.language == 'vi'
                    span.badge.badge-success Tiếng Việt
                  else if doc.language == 'en'
                    span.badge.badge-info Tiếng Anh
                td.fit.align-middle
                  a.btn.btn-primary.btn-sm(href=ADMIN_PATH + doc._id)
                    i.fa.fa-pencil
                    span  Sửa
                  button.btn.btn-danger.btn-sm.ms-2.delete-item-btn(data-id=doc._id.toString(), data-path=ADMIN_PATH ,data-title=doc.name)
                    i.fa.fa-close
                    span  Xóa
      +pagination(ADMIN_PATH, total, page)