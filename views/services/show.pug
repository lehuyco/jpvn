extends ../layout
include ../mixins/servicecard

block content 
  .container
    .page-header
      .page-title
        h2=service.title
      ol.breadcrumb
        li.breadcrumb-item
          a(href='/')
            i.la.la-home
        li.breadcrumb-item
          a(href='/services')=__("menu.services")
  #caseStudiesSingle.case-studies-single
    .container
      .row
        .col-sm-12.col-md-12.col-lg-8
          .case-single-item
            .row
              .col-sm-12.col-md-12.col-lg-12
                img.w-100(src=service.image)
                .text__block.mb-40.mt-20
                  !=service.content
        .col-sm-12.col-md-12.col-lg-4
          .sidebar-widget.mb-3
            h4.widget-title.mt-0.mb-0.pb-0
              strong=__('services.others')
            .divider.mb-3
            each service in services
              +servicecard(service)
