extends ../layout
include ./categories
include ./sidebar

block content
  #blogSingleCentered.blog.blog-single
    .container
      .row
        //- .col-sm-12.col-md-12.col-lg-4
        .col-sm-8
          .page-header
            .page-title
              h2=post.title
            ol.breadcrumb
              li.breadcrumb-item
                a(href='/')
                  i.la.la-home
              li.breadcrumb-item
                a(href='/blog')=__("menu.blog")
              if category
                li.breadcrumb-item
                  a(href='/blog/' + category.slug)=category.title
          .blog-item
            //- .blog__img
            //-   img(src=post.image, alt=post.title)
            .blog__content
              .blog__desc
                !=post.content
        .col-md-4
          .mt-30
            +sidebar()